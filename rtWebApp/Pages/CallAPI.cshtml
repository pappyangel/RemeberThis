@page
@model CallAPIModel
@{
    ViewData["Title"] = "Call API page";
}
<style>
    div {
        margin-bottom: 10px;
    }

    label {
        display: inline-block;
        width: 150px;
        text-align: right;
    }

    textarea {
        vertical-align: middle;
    }
</style>

<div class="card justify-content-center" style="width: 50rem">
    <div class="card-header">
        This page records details of your goot time!
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="column">
                    <label for="baseUrl">@Model.apiBase</label>
                    <input type="text" asp-for="apiRoute" placeholder="Cocktail"><br>
                    <br>
                    <label for="thisrtItem.rtUserName">User Name: </label>
                    <input type="text" asp-for="thisrtItem.rtUserName" placeholder="user"><br>
                    <br>
                    <label for="thisrtItem.rtLocation">Location : </label>
                    <input type="text" asp-for="thisrtItem.rtLocation" placeholder="location"><br>
                    <br>
                    <label for="thisrtItem.rtDateTime">Date/Time: </label>
                    <input type="text" asp-for="thisrtItem.rtDateTime" placeholder="Date/Time"><br>
                    <br>
                    <label for="thisrtItem.rtDescription">Description: </label>
                    <textarea rows="3" cols="23" asp-for="thisrtItem.rtDescription" placeholder="Enter text"></textarea>
                    @* <input type="text" asp-for="thisrtItem.rtDescription" placeholder="description"><br> *@
                </div>
                <div class="column">
                    <input type="file" onchange="loadFile(event)" asp-for="Upload" /><br>
                    <br>
                    <img id="pageimage"  height=auto width="175" src="Images\BabaMan.jpg" alt="Select an image to share">                    
                </div>
            </div>

        </form>
    </div>

    <div class="card-footer">
        <button>Call API</button> &emsp; This is the message from the API: <b> @Model.myAPIMessage
    </div>

    <script>
        var loadFile = function (event) {
            var image = document.getElementById('pageimage');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>